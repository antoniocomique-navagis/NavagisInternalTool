@model IEnumerable<NavagisInternalTool.Models.Client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Client Emails</h2>
<div class="table-border-with-shadow">

    <div class="row">
        <div class="col-lg-6">
            <p>
                @Html.ActionLink("Create New", "Create")
                <!--
                @Html.ActionLink("Add Client Email", "Create", "Clients", null, new { @class = "btn btn-info" })
                @Html.ActionLink("Go to Billing Account List", "Index", "BillingAccounts", null, new { @class = "btn btn-info" })
                -->
            </p>
        </div><!-- /.col-lg-6 -->
        <div class="col-lg-6">
            &nbsp;
            <!--
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Go!</button>
                </span>
                <input type="text" class="form-control" placeholder="Search for...">

                </div>
                          -->
        </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
    <table class="table" id="customTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BillingAccount.BillingAccountName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillingAccount.BillingAccountName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customTable").DataTable();
        });
    </script>
}
