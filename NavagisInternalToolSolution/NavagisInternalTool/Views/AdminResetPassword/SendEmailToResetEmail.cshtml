
@model NavagisInternalTool.Models.AdminUser
@{
    ViewBag.Title = "SendEmailToResetEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var goToForm = ViewBag.gotoForm;
}
<div class="container login-container">
    @if (goToForm == 1)
    {
        <div class="row">
            <div class="col-md-4 col-md-offset-4 login-form-1">
                <center><h4>Please enter your email to reset your password.</h4> </center>
                @using (Html.BeginForm("SendEmailToResetEmail", "AdminResetPassword"))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Password", "dummypasswordNotValid");
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username*" })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        @if (ViewBag.Message != null)
                        {
                            <span class="text-danger">@ViewBag.Message</span>
                        }
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btnSubmit" value="Send email" />
                    </div>

                }
            </div>
        </div>
    }
    else
    {
        <br />
        <div class="form-group">
            <div id="index_info">
                <h4>Success!</h4> <br />
                <span><b>Please check your email.</b></span><br>
            </div>
        </div>
    }
    </div>
<style>
   #index_info {text-align: center}
   #index_info span {color: #525f7f;}
</style>