@model IEnumerable<NavagisInternalTool.Models.BillingAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Billing Accounts</h2>
<div class="table-border-with-shadow">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" id="customTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BillingAccountName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillingAccountName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customTable").DataTable();
        });
    </script>
}